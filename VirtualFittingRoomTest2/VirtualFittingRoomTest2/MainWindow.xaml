        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtual Dressing Room" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen" x:Name="Window1" Top="0" Left="0" WindowState="Maximized"
